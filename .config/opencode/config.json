{
  "$schema": "https://opencode.ai/config.json",
 
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "zai-coding-plan/glm-4.6",
  "instructions": ["CONTRIBUTING.md", "AGENTS.md"],

  "autoupdate": true,
 
  "provider": {
    "groq": {
      "api": "https://api.groq.com/openai/v1",
      "name": "Groq",
      "id": "groq",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/groq-key}",
        "baseURL": "https://api.groq.com/openai/v1"
      }
    },
    "openrouter": {
      "api": "https://openrouter.ai/api/v1",
      "name": "Openrouter",
      "id": "openrouter",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/openrouter-key}"
      }
    },
    "mistral": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Mistral AI",
      "id": "mistral",
      "options": {
        "baseURL": "https://api.mistral.ai/v1",
        "apiKey": "{file:~/.config/opencode/.secrets/mistral-key}"
      },
    }
  },

  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--figma-api-key={file:~/.config/opencode/.secrets/figma-token}", "--stdio"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "environment": {
        "PLAYWRIGHT_BROWSER": "chromium",
        "PLAYWRIGHT_HEADLESS": "true"
      },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cd": "allow",
      "sed": "allow",
      "find": "allow",
      "grep": "allow",
      "cat": "allow",
      "docker ps":"allow",
      "docker logs *":"allow",
      "*": "ask"
    }
  }
}