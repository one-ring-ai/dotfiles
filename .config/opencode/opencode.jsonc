{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "autoupdate": true,
  // model selection
  "model": "openrouter/openai/gpt-5",
  "small_model": "zai-coding-plan/glm-4.6",
  "instructions": [".github/CONTRIBUTING.md", "AGENTS.md"],
  // pre-configured providers
  "provider": {
    "openrouter": {
      "api": "https://openrouter.ai/api/v1",
      "name": "Openrouter",
      "id": "openrouter",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/openrouter-key}"
      }
    }
  },
  // pre-configured mcp servers
  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--figma-api-key={file:~/.config/opencode/.secrets/figma-token}", "--stdio"],
      "enabled": true
    }
  },
  // default CLI permissions
  "permission": {
    "bash": {
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cd": "allow",
      "find": "allow",
      "grep": "allow",
      "docker ps":"allow",
      "docker logs *":"allow",
      "docker inspect *":"allow",
      "npm test *":"allow",
      "npm install *":"allow",  
      "date *":"allow",
      "*": "ask"
    }
  }
}