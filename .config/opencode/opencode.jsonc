{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**", "vendor/**", "venv/**", ".venv/**"]
  },
  // model selection
  "model": "opencode/gpt-5.1-codex-max",
  "small_model": "opencode/big-pickle",
  "instructions": [".github/CONTRIBUTING.md", "AGENTS.md"],
  // pre-configured providers
  "provider": {
    "openrouter": {
      "api": "https://openrouter.ai/api/v1",
      "name": "Openrouter",
      "id": "openrouter",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/openrouter-key}"
      },
      "models": {
        "@preset/planner-model": {},
        "@preset/coder-model": {}
      }
    },
    "replicate": {
      "api": "https://api.replicate.com/v1",
      "name": "Replicate",
      "id": "replicate",
      "options": {
        "REPLICATE_API_TOKEN": "{file:~/.config/opencode/.secrets/replicate-key}"
      }
    }
  },
  // pre-configured mcp servers
  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--figma-api-key={file:~/.config/opencode/.secrets/figma-token}", "--stdio"],
      "enabled": true
    },
    "next-devtools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest"],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"],
      "enabled": true
    },
    // remove "--headless=true" to the command if you want to use chrome with a GUI
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--headless=true"],
      "enabled": true
    }
  },
  // default CLI permissions
  "permission": {
    "external_directory":"deny",
    "doom_loop": "deny",
    "bash": {
      "*": "allow",
      "rm -rf /": "deny",
      "rm -rf ~": "deny",
      "find / -delete": "deny",
      "find /* -delete": "deny",
      "command > /dev/sda": "deny",
      "command > /dev/nvme*": "deny",
      "* > /dev/sd*": "deny",
      "* > /dev/nvme*": "deny",
      "dd if=/dev/zero of=/dev/sd*": "deny",
      "dd if=/dev/zero of=/dev/nvme*": "deny",
      "mkfs.* /dev/sd*": "deny",
      "mkfs.* /dev/nvme*": "deny",
      "mkfs.* /dev/loop*": "deny",
      ":(){ :|:& };:": "deny",
      "sudo su *": "deny",
      "sudo -i": "deny",
      "sudo -u#-1": "deny",
      "sudo chmod 777 /": "deny",
      "sudo chown *": "deny",
      "chmod -R 777 /": "deny",
      "chmod +s *": "deny",
      "chattr -i *": "deny",
      "crontab -e": "deny",
      "crontab *": "deny",
      "echo * >> /etc/crontab": "deny",
      "touch /etc/cron.d/*": "deny",
      "cat /etc/shadow": "deny",
      "cat /root/.ssh/id_rsa": "deny",
      "cat ~/.ssh/authorized_keys": "deny",
      "cat /proc/self/environ": "deny",
      "wget * | sh": "deny",
      "curl * | bash": "deny",
      "curl * | sh": "deny",
      "nc -e *": "deny",
      "bash -i >& /dev/tcp/*": "deny",
      "python -c * /dev/tcp/*": "deny",
      "scp *": "deny",
      "rsync *": "deny",
      "nmap *": "deny",
      "traceroute *": "deny",
      "iptables *": "deny",
      "echo * >> /etc/hosts": "deny",
      "docker run --privileged *": "deny",
      "docker run -v /:/host*": "deny",
      "shutdown *": "deny",
      "reboot": "deny",
      "poweroff": "deny",
      "systemctl reboot": "deny",
      "systemctl poweroff": "deny",
      "kill -9 -1": "deny",
      "yes > /dev/null": "deny",
      "stress *": "deny",
      "eval *": "deny",
      "git *": "deny",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git rev-parse HEAD": "allow",
      "docker *": "ask",
      "docker ps": "allow",
      "docker logs *": "allow",
      "docker inspect *": "allow",
      "docker build *": "allow",
      "docker buildx *": "allow",
      "docker compose ps": "allow",
      "docker compose logs *": "allow" 
    }
  }
}