{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "autoupdate": false,
  // model selection
  "model": "openrouter/@preset/planner-model",
  "small_model": "opencode/grok-code",
  "instructions": [".github/CONTRIBUTING.md", "AGENTS.md"],
  // pre-configured providers
  "provider": {
    "openrouter": {
      "api": "https://openrouter.ai/api/v1",
      "name": "Openrouter",
      "id": "openrouter",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/openrouter-key}"
      },
      "models": {
        "@preset/planner-model": {},
        "@preset/coder-model": {},
        "@preset/small-model": {}
      }
    }
  },
  // pre-configured mcp servers
  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--figma-api-key={file:~/.config/opencode/.secrets/figma-token}", "--stdio"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@microsoft/playwright-mcp", "--stdio"],
      "enabled": true
    }
  },
  // default CLI permissions
  "permission": {
    "bash": {
      "rm *": "ask",
      "rm -rf /": "deny",
      "rm -rf ~": "deny",
      "find / -delete": "deny",
      "find /* -delete": "deny",
      "command > /dev/sda": "deny",
      "command > /dev/nvme*": "deny",
      "* > /dev/sd*": "deny",
      "* > /dev/nvme*": "deny",
      "dd if=/dev/zero of=/dev/sd*": "deny",
      "dd if=/dev/zero of=/dev/nvme*": "deny",
      "mkfs.* /dev/sd*": "deny",
      "mkfs.* /dev/nvme*": "deny",
      "mkfs.* /dev/loop*": "deny",
      ":(){ :|:& };:": "deny",
      "sudo *": "ask",
      "sudo su *": "deny",
      "sudo -i": "deny",
      "sudo -u#-1": "deny",
      "sudo chmod 777 /": "deny",
      "sudo chown *": "deny",
      "chmod -R 777 /": "deny",
      "chmod +s *": "deny",
      "chattr -i *": "deny",
      "crontab -e": "deny",
      "crontab *": "deny",
      "echo * >> /etc/crontab": "deny",
      "touch /etc/cron.d/*": "deny",
      "cat /etc/shadow": "deny",
      "cat /root/.ssh/id_rsa": "deny",
      "cat ~/.ssh/authorized_keys": "deny",
      "cat /proc/self/environ": "deny",
      "cat .env": "ask",
      "wget *": "ask",
      "wget * | sh": "deny",
      "curl *": "ask",
      "curl * | bash": "deny",
      "curl * | sh": "deny",
      "curl * -o /tmp/*": "ask",
      "nc -e *": "deny",
      "bash -i >& /dev/tcp/*": "deny",
      "python -c * /dev/tcp/*": "deny",
      "scp *": "deny",
      "rsync *": "deny",
      "nmap *": "deny",
      "traceroute *": "deny",
      "iptables *": "deny",
      "echo * >> /etc/hosts": "deny",
      "docker run --privileged *": "deny",
      "docker run -v /:/host*": "deny",
      "docker exec *": "ask",
      "shutdown *": "deny",
      "reboot": "deny",
      "poweroff": "deny",
      "systemctl reboot": "deny",
      "systemctl poweroff": "deny",
      "kill -9 -1": "deny",
      "yes > /dev/null": "deny",
      "stress *": "deny",
      "eval *": "deny",
      "git": "deny",
      "git *": "deny",
      "*": "ask"
    }
  }
}