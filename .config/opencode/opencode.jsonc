{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "autoupdate": true,
  // model selection
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "small_model": "zai-coding-plan/glm-4.6",
  "instructions": [".github/CONTRIBUTING.md", "AGENTS.md"],
  // pre-configured providers
  "provider": {
    "groq": {
      "api": "https://api.groq.com/openai/v1",
      "name": "Groq",
      "id": "groq",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/groq-key}",
        "baseURL": "https://api.groq.com/openai/v1"
      }
    },
    "openrouter": {
      "api": "https://openrouter.ai/api/v1",
      "name": "Openrouter",
      "id": "openrouter",
      "options": {
        "apiKey": "{file:~/.config/opencode/.secrets/openrouter-key}"
      }
    },
    "mistral": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Mistral AI",
      "id": "mistral",
      "options": {
        "baseURL": "https://api.mistral.ai/v1",
        "apiKey": "{file:~/.config/opencode/.secrets/mistral-key}"
      },
    }
  },
  // pre-configured mcp servers
  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--figma-api-key={file:~/.config/opencode/.secrets/figma-token}", "--stdio"],
      "enabled": true
    }
  },
  // default CLI permissions
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cd": "allow",
      "sed": "allow",
      "find": "allow",
      "grep": "allow",
      "cat": "allow",
      "docker ps":"allow",
      "docker logs *":"allow",
      "*": "ask"
    }
  }
}